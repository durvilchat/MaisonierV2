<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/operation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Ajouter un Logement"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/TypeDeLogement"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/Batiment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/desc_layou_Reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Référence" />
        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/PrixMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Prix Min"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/PrixMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Prix Max"
            android:inputType="numberDecimal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="date de creation"
                android:inputType="date" />

            <Button
                android:id="@+id/dateSelect"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_date" />
        </LinearLayout>

        <EditText
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <include
            layout="@layout/btn_valider_annuler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>