<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="513dp"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bailleur"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Bailleur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bailleur" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la Cité"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NomCite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la Cité" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police de la Cite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PoliceCite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police de la Cite" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police de la Description"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PoliceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police de la Description" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police des Contacts"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PoliceContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Police des Contacts" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etat"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/Etat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
