<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="513dp"
            android:layout_marginBottom="20dp"
            android:columnCount="2"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date d'établissement"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DateEtablissement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date d'établissement" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bailleur"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Bailleur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bailleur" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitant"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Habitant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habitant" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logement"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Logement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logement" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observations"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Observations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observations" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>
