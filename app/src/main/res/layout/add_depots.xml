<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/operation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_margin_half"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Ajouter un dÃ©pot"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/Habitant"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/Logement"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/Annee"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/Mois"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_Montant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Montant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Montant"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/PaiementsAutoumatiques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:text="Paiements Autoumatiques" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/desc_Libelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Observation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.48"
                android:ems="10"
                android:hint="Observation"
                android:inputType="textMultiLine" />


        </android.support.design.widget.TextInputLayout>

        <include
            layout="@layout/btn_valider_annuler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>